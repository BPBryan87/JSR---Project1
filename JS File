JS:

function addToList(list, newThing) {
  var li = document.createElement("li");
  var liText = document.createTextNode(newThing);
  li.appendChild(liText);
  list.appendChild(li);
}

window.onload = function() {

  b = document.getElementById("new-answer-button");
  b.addEventListener("click", function(event1){
    event.preventDefault();
    list = document.getElementById("new-list");
    newThing = document.getElementById("new-answer");
    newValue = newThing.value;

    if(newValue == "") {
      alert("Good Job! - Submit new answer to the next question");
    } else {
      addToList(list, newValue);
      newThing.value = "";
    }
  });
};




